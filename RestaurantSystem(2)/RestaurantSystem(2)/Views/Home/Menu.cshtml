
@{
    ViewBag.Title = "Menu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="topSingleBkg topPageBkg">
    <div class="item-img top-menu-5"></div>
    <div class="inner-desc">
        <h1 class="post-title single-post-title">Menüler</h1>
        <span class="post-subtitle"> Come and taste our delicacies</span>
    </div>
</section>
<!-- /TOP IMAGE -->
<!-- WRAP CONTENT -->
<div id="wrap-content" class="page-content custom-page-template">
    @model RestaurantSystem_2_.Models.ViewModel.IndexViewModel
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="page-holder custom-page-template">
                    @if (Model == null)
                    {
                        <div class="alert alert-danger">Model yüklenemedi!</div>
                    }
                    else if (Model.Tbl_MenuKategori == null || !Model.Tbl_MenuKategori.Any())
                    {
                        <div class="alert alert-warning">
                            Menü kategorileri bulunamadı!
                            <br />Kategori sayısı: @(Model.Tbl_MenuKategori?.Count ?? 0)
                        </div>
                    }
                    else
                    {
                        var anaKategoriler = Model.Tbl_MenuKategori
                            .Where(k => k.UstKategoriID == null)
                            .OrderBy(k => k.ID)
                            .ToList();

                        foreach (var anaKategori in anaKategoriler)
                        {
                            <h2 class="menu-category">@anaKategori.KategoriAd</h2>

                            var altKategoriler = Model.Tbl_MenuKategori
                                .Where(k => k.UstKategoriID == anaKategori.ID)
                                .OrderBy(k => k.ID)
                                .ToList();

                            if (altKategoriler.Any())
                            {
                                <div class="row">
                                    @foreach (var altKategori in altKategoriler)
                                    {
                                        <div class="col-md-6 margin-b54">
                                            <div class="image-container @("menu5-img" + (altKategoriler.IndexOf(altKategori) % 2 + 1))">
                                                <div class="smalltitle white no-margin">@(altKategoriler.IndexOf(altKategori) + 1)</div>
                                                <h2 class="white no-margin">@altKategori.KategoriAd</h2>
                                            </div>

                                            <ul class="food-menu menu-1cols">
                                                @{
                                                    var yemekler = Model.Tbl_Menu?
                                                        .Where(y => y.KategoriID == altKategori.ID)
                                                        .OrderBy(y => y.ID)
                                                        .ToList();

                                                    if (yemekler != null && yemekler.Any())
                                                    {
                                                        foreach (var yemek in yemekler)
                                                        {
                                                            <li>
                                                                <h4>
                                                                    <span class="menu-title">@yemek.YemekAd</span>
                                                                    <span class="menu-price">@yemek.Fiyat.ToString("C")</span>
                                                                </h4>
                                                                <div class="row">
                                                                    @if (!string.IsNullOrEmpty(yemek.ResimURL))
                                                                    {
                                                                        <div class="menu-img">
                                                                            <img src="@yemek.ResimURL" class="img-fluid" alt="@yemek.YemekAd" width="100" height="200">
                                                                        </div>
                                                                    }
                                                                    <div class="menu-text">@yemek.Acıklama</div>
                                                                </div>
                                                            </li>
                                                        }
                                                    }
                                                }
                                            </ul>
                                        </div>
                                    }
                                </div>
                            }
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>
    <!-- /container -->


