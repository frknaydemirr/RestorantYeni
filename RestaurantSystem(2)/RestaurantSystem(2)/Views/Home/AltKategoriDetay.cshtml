@model RestaurantSystem_2_.Models.ViewModel.IndexViewModel
@{
    ViewBag.Title = "AltKategoriDetay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="topSingleBkg topPageBkg">
    <div class="item-img top-menu-1col"></div>
    <div class="inner-desc"> 
        <h1 class="post-title single-post-title">@Model.Tbl_SeciliKategori.KategoriAd</h1> 
    </div>
</section>
<div class="container">
    <div class="mobile-menu-grid">
        @foreach (var anaKategori in Model.Tbl_MenuKategori.OrderBy(k => k.ID))
        {


            <a href="/Home/UrunListesi/@anaKategori.ID" class="menu-card" style="background-image:url('@anaKategori.ResimURL')">
                <span class="menu-title">@anaKategori.KategoriAd</span>
            </a>
        }

    </div>
</div>

<style>
    .mobile-menu-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 15px;
        padding: 15px;
    }

    .menu-card {
        position: relative;
        background-size: cover;
        background-position: center;
        border-radius: 10px;
        height: 120px;
        display: flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        overflow: hidden;
        box-shadow: 0 2px 6px rgba(0,0,0,0.3);
        transition: transform 0.3s ease;
    }

        .menu-card:hover {
            transform: scale(1.03);
        }

        .menu-card::before {
            content: "";
            position: absolute;
            inset: 0;
            background: rgba(0, 0, 0, 0.5); /* karartma efekti */
        }

    .menu-title {
        position: relative;
        color: #fff;
        font-weight: bold;
        font-size: 18px;
        text-align: center;
        z-index: 1;
    }

    @@media(min-width: 576px) {
        .mobile-menu-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @@media(min-width: 768px) {
        .mobile-menu-grid {
            grid-template-columns: repeat(3, 1fr);
        }
    }
</style>





